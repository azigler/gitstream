manifest:
  version: 1.0

on:
  - comment_added

automations:
  review_dispatch_github_action_slash_command:
    if:
       - {{ is.requested }}
    run:
      - action: run-github-workflow@v1
        args:
          workflow: .github/workflows/deploy.yml
is:
  requested: {{ pr.comments | match(attr='content', term='/gitstream dispatch deploy') | some }}
