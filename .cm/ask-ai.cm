-*- mode: yaml -*-

manifest:
  version: 1.0

triggers:
  on:
    - pr_created
    - commit
automations:
  describe_pr:
    if:
      - true
    run:
      - action: update-description@v1
        args:
          concat_mode: append
          description: |
            "{{ source | askAI("based on the given context, describe in plain english the changes introduced in this PR.", env.OPEN_AI_TOKEN) | prependTitle("✨ /:\ gitStream Describe PR ✨") | encode }}"